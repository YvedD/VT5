<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BASIS: Filled VT5-knop (primair) -->
    <style name="Widget.VT5.Button" parent="Widget.Material3.Button">
        <!-- Vorm / spacing -->
        <item name="cornerRadius">@dimen/vt5_btn_corner</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">8dp</item>
        <item name="android:minHeight">48dp</item>

        <!-- Kleuren via thema -->
        <item name="backgroundTint">@color/vt5_light_blue</item>
        <item name="android:textColor">@color/vt5_white</item>
        <item name="rippleColor">?attr/colorPrimaryContainer</item>

        <!-- Optioneel: subtiele rand op filled -->
        <item name="strokeColor">@color/vt5_light_gray</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- OUTLINED: jouw huidige (donkere bg via selector, lichtblauwe rand, witte tekst) -->
    <style name="Widget.VT5.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@drawable/vt5_btn_selector</item>
        <item name="backgroundTint">@null</item>

        <item name="strokeColor">@color/vt5_light_blue</item>
        <item name="strokeWidth">@dimen/vt5_btn_stroke</item>
        <item name="cornerRadius">@dimen/vt5_btn_corner</item>

        <item name="android:textColor">@color/vt5_white</item>
        <item name="rippleColor">@color/vt5_light_blue</item>

        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- SPECIAAL: 'Auto'-weerknop -> standaard zwart vlak + witte rand/tekst -->
    <style name="Widget.VT5.Button.Auto" parent="Widget.VT5.Button">
        <item name="backgroundTint">@color/vt5_black</item>
        <item name="android:textColor">@color/vt5_white</item>
        <item name="strokeColor">@color/vt5_white</item>
        <item name="strokeWidth">@dimen/vt5_btn_stroke</item>
        <item name="rippleColor">@color/vt5_light_blue</item>
    </style>

</resources>
