                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    <!-- Checkboxes row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:gravity="start">

        <CheckBox
            android:id="@+id/cb_zw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/annotation_direction_sw" />

        <CheckBox
            android:id="@+id/cb_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/annotation_direction_no"
            android:layout_marginStart="12dp" />

        <CheckBox
            android:id="@+id/cb_markeren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/annotation_mark"
            android:layout_marginStart="12dp" />

        <CheckBox
            android:id="@+id/cb_markeren_lokaal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/annotation_mark_local"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Manual count inputs section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/annotation_manual_counts_title"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <!-- Aantal ZW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/annotation_count_zw"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_aantal_zw"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="0"
                android:contentDescription="@string/annotation_count_zw"
                android:textSize="12sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <!-- Aantal NO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/annotation_count_no"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_aantal_no"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="0"
                android:contentDescription="@string/annotation_count_no"
                android:textSize="12sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <!-- Aantal Lokaal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/annotation_count_local"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_aantal_lokaal"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="0"
                android:contentDescription="@string/annotation_count_local"
                android:textSize="12sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <!-- Opmerking -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/annotation_remarks"
                android:textSize="12sp"
                android:layout_gravity="top"
                android:paddingTop="4dp" />

            <EditText
                android:id="@+id/et_opmerkingen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:hint="@string/annotation_remarks_hint"
                android:contentDescription="@string/annotation_remarks"
                android:minLines="2"
                android:maxLines="4"
                android:textSize="12sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </LinearLayout>
    </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="@string/annotatie_annuleren" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="@string/annotatie_ok" />
    </LinearLayout>

</LinearLayout>
