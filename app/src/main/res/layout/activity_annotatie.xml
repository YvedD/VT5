<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/annot_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/annotatie_titel"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- row with five equal-width vertical columns -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Column: leeftijd -->
            <LinearLayout
                android:id="@+id/col_leeftijd_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="@string/annotation_age"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:id="@+id/col_leeftijd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Pre-drawn placeholder toggle buttons (texts will be set from annotations.json) -->
                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_leeftijd_1"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_leeftijd_2"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_leeftijd_3"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_leeftijd_4"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_leeftijd_5"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_leeftijd_6"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_leeftijd_7"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_leeftijd_8"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                </LinearLayout>
            </LinearLayout>

            <!-- Column: geslacht -->
            <LinearLayout
                android:id="@+id/col_geslacht_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="@string/annotation_gender"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:id="@+id/col_geslacht"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_geslacht_1"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_geslacht_2"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_geslacht_3"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_geslacht_4"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                </LinearLayout>
            </LinearLayout>

            <!-- Column: kleed -->
            <LinearLayout
                android:id="@+id/col_kleed_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="@string/annotation_plumage"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:id="@+id/col_kleed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_kleed_1"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_kleed_2"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_kleed_3"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_kleed_4"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_kleed_5"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_kleed_6"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_kleed_7"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_kleed_8"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Column: location -->
            <LinearLayout
                android:id="@+id/col_location_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="@string/annotation_location"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:id="@+id/col_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_location_1"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_location_2"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_location_3"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_location_4"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_location_5"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_location_6"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Column: height -->
            <LinearLayout
                android:id="@+id/col_height_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="@string/annotation_height"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:id="@+id/col_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_height_1"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_height_2"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_height_3"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_height_4"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_height_5"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_height_6"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_height_7"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
                        android:textSize="8sp" />

                    <androidx.appcompat.widget.AppCompatToggleButton
                        android:id="@+id/btn_height_8"
                        style="@style/Widget.VT5.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:minHeight="20dp"
                        android:padding="2dp"
