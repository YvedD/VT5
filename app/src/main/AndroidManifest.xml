<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    
    <!-- Permissies voor uurlijks alarm -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Declare microphone as required hardware feature (prevents install on devices without a mic).
         Remove or set android:required="false" if you want to allow install on devices without mic. -->
    <uses-feature android:name="android.hardware.microphone" android:required="true" />

    <application
        android:name=".VT5App"
        android:allowBackup="true"
        android:icon="@drawable/vt5"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.VT5.Dark">
        <!-- Splash Screen (launcher) -->
        <activity
            android:name=".splash.SplashActiviteit"
            android:exported="true"
            android:theme="@style/Theme.VT5.Splash"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <!-- Hoofdscherm -->
        <activity
            android:name=".hoofd.HoofdActiviteit"
            android:exported="false"
            android:screenOrientation="sensorPortrait" />

        <!-- InstallatieScherm -->
        <activity
            android:name=".features.opstart.ui.InstallatieScherm"
            android:exported="false"
            android:screenOrientation="sensorPortrait" />

        <!-- Nieuw: MetadataScherm -->
        <activity
            android:name=".features.metadata.ui.MetadataScherm"
            android:exported="false"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="sensorPortrait" />

        <!-- SoortSelectieScherm -->
        <activity
            android:name=".features.soort.ui.SoortSelectieScherm"
            android:exported="false"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="sensorPortrait" />

        <!-- TellingScherm -->
        <activity
            android:name=".features.telling.TellingScherm"
            android:exported="false"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="sensorPortrait" />

        <activity
            android:name="com.yvesds.vt5.features.telling.HuidigeStandScherm"
            android:exported="false"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="sensorPortrait" />

        <!-- AnnotatieScherm (nieuw) -->
        <activity
            android:name=".features.telling.AnnotatieScherm"
            android:exported="false"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="sensorPortrait" />

        <!-- TellingBeheerScherm -->
        <activity
            android:name=".features.telling.TellingBeheerScherm"
            android:exported="false"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="sensorPortrait" />
        
        <!-- Uurlijks alarm receivers -->
        <receiver
            android:name=".core.app.HourlyAlarmManager$HourlyAlarmReceiver"
            android:enabled="true"
            android:exported="false" />
        
        <receiver
            android:name=".core.app.HourlyAlarmManager$BootReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>
</manifest>